{
    "name": "CRASSR",
    "version": "1.0.0",
    "private": true,
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "react-scripts": "^1.0.17",
        "redux-devtools-extension": "^2.13.2"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "compression": "^1.7.1",
        "cssnano": "^3.10.0",
        "express": "^4.16.2",
        "ignore-styles": "^5.0.1",
        "morgan": "^1.9.0",
        "node-sass": "^4.5.3",
        "nodemon": "^1.14.8",
        "postcss": "^6.0.12",
        "postcss-cli": "^4.1.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.6",
        "react-router-dom": "^4.2.2",
        "redux": "^3.7.2",
        "redux-devtools-extension": "^2.13.2",
        "redux-logger": "^3.0.6",
        "redux-saga": "^0.16.0",
        "url": "^0.11.0"
    },
    "scripts": {
        "build": "yarn styles && yarn minify && react-scripts build",
        "flow": "flow",
        "minify": "postcss -u autoprefixer -b 'last 2 versions' -u cssnano -o -r src/assets/scss/main.css",
        "serve": "NODE_ENV=development nodemon server/index.js",
        "start": "react-scripts start",
        "styles": "node-sass-chokidar src/assets/scss/main.scss src/assets/scss/main.css",
        "test": "react-scripts test --env=jsdom",
        "watch": "yarn styles && node-sass-chokidar src/assets/scss/main.scss src/assets/scss/main.css --watch"
    }
}
